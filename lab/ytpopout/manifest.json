{
    "manifest_version": 2,
    "name": "YTPopOut",
    "description": "Add a pop out button to Youtube",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Adds pop out button to Youtube"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["app.js"],
            "run_at": "document_end"         // pay attention to this line
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>"
    ]
}